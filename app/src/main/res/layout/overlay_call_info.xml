<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:background="@color/overlay_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:background="@color/primary"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overlay_incoming_call"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@android:drawable/presence_online"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Modified Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/overlay_modified_number"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/modifiedNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Изменено] +1234567890"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/accent"
            android:layout_marginBottom="16dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/overlay_shadow"
            android:layout_marginVertical="8dp"/>

        <!-- Original Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/overlay_original_number"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/originalNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оригинал: +1234567890"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Описание правила"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:background="#15667eea"
            android:visibility="gone"/>

        <!-- Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ℹ️ Это учебная демонстрация"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="#10000000"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

